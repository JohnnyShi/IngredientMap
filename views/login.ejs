<%- include header %>
<% if (success) { %>
  <div><%= success %></div>
<% } %>
<% if (error) { %>
  <div><%= error %> </div>
<% } %>
<div class="container">
	<form class="login-form form-horizontal" method="post" id="login-form">
		<h2>Login</h2>
		<hr/>
		<div class="form-group">
			<label class="control-label col-sm-2" for="username">Username:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="username" name="name" placeholder="Enter Username" requried/>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="password">Password:</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required/>
				<i class="fa fa-upload capsLockIcon" aria-hidden="true"></i>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</div>
	</form>
</div>
<%- include footer %>