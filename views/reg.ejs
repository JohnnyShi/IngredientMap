<%- include header %>
<% if (success) { %>
  <div><%= success %></div>
<% } %>
<% if (error) { %>
  <div><%= error %> </div>
<% } %>
<div class="container">
	<form class="reg-form form-horizontal" method="post" id="reg-form">
		<h2>Sign up</h2>
		<hr/>
		<div class="form-group" id="username_div">
			<label class="control-label col-sm-2" for="username">Username:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="username" name="name" placeholder="Enter Username" required/>
			</div>
			<ul class="input-requirements">
				<li>At least 6 characters long</li>
				<li>Must only contain letters and numbers(no special characters)</li>
			</ul>
		</div>
		<div class="form-group" id="email_div">
			<label class="control-label col-sm-2" for="email">Email:</label>
			<div class="col-sm-10">
				<input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required/>
			</div>
		</div>
		<div class="form-group" id="password_div">
			<label class="control-label col-sm-2" for="password">Password:</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required/>
				<i class="fa fa-upload capsLockIcon" aria-hidden="true"></i>

			</div>
			<ul class="input-requirements">
				<li>At least 8 characters long, no more than 30</li>
				<li>Contains at least 1 number</li>
				<li>Contains at least 1 lowercase letter</li>
				<li>Contains at least 1 uppercase letter</li>
				<li>Contains a special character</li>
			</ul>
		</div>
		<div class="form-group" id="password_repeat_div">
			<label class="control-label col-sm-2" for="password_repeat">Retype Password:</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="password_repeat" name="password-repeat" placeholder="Retype Password" required/>
				<i class="fa fa-upload capsLockIcon" aria-hidden="true"></i>
			</div>
		</div>
		<!--
		<div class="form-group">
			<div>
				<button class="g-recaptcha" data-sitekey="6LekzTwUAAAAAHdnUBFyDSuAK-21EFKpy730SANO" data-callback="YourOnSubmitFn">Submit</button>
			</div>
		</div>
		-->
		<div class="g-recaptcha" data-sitekey="6Lcq0TwUAAAAAJtDK8FHv0Cds8enZq3Y8ClaFZ5n"></div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
    			<button type="submit" class="btn btn-default">Submit</button>
    		</div>
    	</div>
	</form>
</div>
<script src="/javascripts/register.js"></script>
<script>
	$(document).ready(function() {
      	$('#reg_form').submit(function() {
        	$(this).ajaxSubmit({
          		error: function(xhr) {
            		status('Error: ' + xhr.status);
          		},
         		success: function(response) {
          			console.log(response);
         		}
        	});
        //Very important line, it disable the page refresh.
        return false;
      	});
    });
</script>
